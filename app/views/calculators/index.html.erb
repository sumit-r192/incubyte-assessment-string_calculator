<div class="container vh-100 d-flex justify-content-center align-items-center">
  <div class="col-md-6">
    <div class="card shadow-lg border-0 rounded-3">
      <div class="card-body p-4">
        <h2 class="text-center mb-4 text-primary">String Calculator</h2>

        <%= form_with url: calculate_path, method: :post, local: true, class: "needs-validation", novalidate: true do |form| %>
          <div class="mb-4">
            <%= form.label :input, "Enter numbers (separated by commas or new lines)", class: "form-label fw-semibold" %>
            <%= form.text_area :input, class: "form-control form-control-lg", rows: 3, placeholder: "Example: 1,2,3 or 1\n2\n3" %>
          </div>

          <div class="d-grid gap-2">
            <%= form.submit "Calculate Sum", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>

        <% if @result.present? %>
          <div class="alert alert-success mt-4">
            <h5 class="alert-heading mb-0 text-center">
              Result: <span class="fw-bold"><%= @result %></span>
            </h5>
          </div>
        <% end %>

        <% if @error.present? %>
          <div class="alert alert-danger mt-4">
            <h5 class="alert-heading mb-0 text-center">
              <i class="bi bi-exclamation-triangle-fill me-2"></i>
              <%= @error %>
            </h5>
          </div>
        <% end %>

        <div id="inputHelp" class="form-text mb-3">
          <ul class="mb-0" style="list-style: disc inside;">
            <li>Negative numbers are <strong>not allowed</strong> and will cause an error.</li>
            <li>Numbers greater than 1000 are ignored.</li>
            <li>Trailing delimiters or empty values cause errors.</li>
            <li>Supports commas, newlines, and custom single-character delimiters.</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
